<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourPosts</title>
    <link rel="stylesheet" href="/styles/YourPosts.css">
</head>
<body>
    <div class="Container">
        <h1>My Blog</h1>
        <a id="newPostbtn" href="/new"></a>
        <ul id="postlist">
            <%if (locals.posts){%>
                <%posts.forEach(post=>{%>
                    <li>
                        <h2>
                            <%=post.title %>
                        </h2>
                        <small>
                            <%=post.date %>
                        </small>
                        <p>
                            <%=post.content %>
                        </p>
                        <small>
                            By:<%=post.author %>
                        </small>
                        <a class="editpost" href="/edit/<%= post.id %>">Edit</a>
                        <a href="/api/posts/delete/"<%= post.id %>>Delete</a>
                    </li>

                <% });%>
            <%}%>
        </ul>
    </div>
    
</body>
</html>